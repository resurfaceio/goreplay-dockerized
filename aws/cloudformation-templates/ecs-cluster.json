{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Deploys ECS Cluster containing a Resurface instance and a Network Sniffer instance to capture mirrored VPC traffic, as well as the corresponding EC2 instance",
  "Parameters": {
    "VPCID": {
      "Type": "AWS::EC2::VPC::Id",
      "Description": "Select a VPC to deploy Resurface network resources in"
    },
    "VPCInternetGatewayID": {
      "Type": "String",
      "Description": "Enter the ID of the Intenet Gateway corresponding to the selected VPC"
    },
    "MirrorSessionVNI": {
      "Type": "Number",
      "Description": "VXLAN Network Identifier (VNI) used to idetify VXLAN segments in mirrored packets. Modify if your traffic mirroring session uses a VNI value different from the default one",
      "Default": 8864121
    },
    "MirrorSourceIP": {
      "Type": "String",
      "Description": "Enter the private IP of the EC2 instance to mirror traffic from"
    },
    "MirrorSourcePort": {
      "Type": "String",
      "Description": "Port in the source EC2 instance to mirror traffic from",
      "Default": "80"
    },
    "ResurfaceCIDR": {
      "Type": "String",
      "Description": "Enter a CIDR for the Resurface Subnet. Must be a subset of the selected VPC CIDR block. Must not overlap with the CIDR blocks of other subnets in the selected VPC",
      "AllowedPattern": "^[0-9]{0,3}\\.[0-9]{0,3}\\.[0-9]{0,3}\\.[0-9]{0,3}\\/[0-3]?[0-9]$",
      "Default": "52.177.0.0/24",
      "ConstraintDescription": "must be a valid CIDR block (xxx.xxx.xxx.xxx/xx)"
    },
    "ResurfaceEC2KeyPair": {
      "Type": "AWS::EC2::KeyPair::KeyName",
      "Description": "Select an existing EC2 Key Pair to connect to the Resurface EC2 instance using SSH"
    },
    "ResurfaceEntitlementToken": {
      "Type": "String",
      "Description": "Enter the Resurface Entitlement Token sent via email. The token is used to connect to the Resurface Docker registry"
    },
    "ResurfaceRules": {
      "Type": "String",
      "Description": "Logging rules. More info: https://resurface.io/logging-rules",
      "Default": "include debug"
    }
  },
  "Resources": {
    "ResurfaceECSRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "ResurfaceECSRole",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Sid": "",
              "Effect": "Allow",
              "Principal": {
                "Service": ["ecs-tasks.amazonaws.com", "ecs.amazonaws.com", "ec2.amazonaws.com"]
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "ManagedPolicyArns": ["arn:aws:iam::aws:policy/service-role/AmazonECSTaskExecutionRolePolicy"],
        "Policies": [
          {
            "PolicyName": "ResurfaceGetSecretPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "secretsmanager:GetSecretValue"
                  ],
                  "Resource": [
                    {
                      "Ref": "ResurfaceEntitlementSecret"
                    }
                  ]
                }
              ]
            }
          },
          {
            "PolicyName": "ResurfaceECSPolicy",
            "PolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [ {
                    "Effect": "Allow",
                    "Action": "ecs:*",
                    "Resource": "*"
                } ]
            } 
          },
          {
            "PolicyName": "AmazonECSforEC2Policy",
            "PolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [ {
                    "Effect": "Allow",
                    "Action": [
                        "ec2:DescribeTags",
                        "ecs:CreateCluster",
                        "ecs:DeregisterContainerInstance",
                        "ecs:DiscoverPollEndpoint",
                        "ecs:Poll",
                        "ecs:RegisterContainerInstance",
                        "ecs:StartTelemetrySession",
                        "ecs:UpdateContainerInstancesState",
                        "ecs:Submit*",
                        "ecr:GetAuthorizationToken",
                        "ecr:BatchCheckLayerAvailability",
                        "ecr:GetDownloadUrlForLayer",
                        "ecr:BatchGetImage",
                        "logs:CreateLogStream",
                        "logs:PutLogEvents"
                    ],
                    "Resource": "*"
                } ]
            }
          }
        ]
      }
    },
    "ResurfaceSubnet": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "MapPublicIpOnLaunch": "true",
        "CidrBlock": { "Ref": "ResurfaceCIDR" },
        "VpcId": { "Ref": "VPCID" }
      }
    },
    "ResurfaceSG": {
      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription" : "Resurface Sniffer Security Group",
        "VpcId" : { "Ref": "VPCID" }
      }
    },
    "ResurfaceSGIngress": {
      "Type" : "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "CidrIp": { "Fn::Join": [ "/", [ { "Ref": "MirrorSourceIP" }, "32" ] ] },
        "Description" : "Enable UDP mirrored traffic",
        "FromPort" : 4789,
        "ToPort": 4789,
        "GroupId" : { "Ref": "ResurfaceSG" },
        "IpProtocol" : "udp"
      }
    },
    "ResurfaceSGIngressSSH": {
      "Type": "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "CidrIp": "0.0.0.0/0",
        "FromPort": 22,
        "ToPort": 22,
        "GroupId": { "Ref": "ResurfaceSG" },
        "IpProtocol": "tcp"
      }
    },
    "ResurfaceENI":{
      "Type" : "AWS::EC2::NetworkInterface",
      "Properties" : {
        "GroupSet" : [ { "Ref": "ResurfaceSG" } ],
        "SubnetId" : { "Ref": "ResurfaceSubnet" }
      }
    },
    "ResurfaceRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": { "Ref": "VPCID" }
      }
    },
    "ResurfaceRouteTableAssoc": {
      "Type":"AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "RouteTableId": { "Ref": "ResurfaceRouteTable" },
        "SubnetId": { "Ref": "ResurfaceSubnet" }
      }
    },
    "Route" : {
      "Type" : "AWS::EC2::Route",
      "Properties" : {
        "RouteTableId" : { "Ref" : "ResurfaceRouteTable" },
        "DestinationCidrBlock" : "0.0.0.0/0",
        "GatewayId" : { "Ref" : "VPCInternetGatewayID" }
      }
    },
    "ResurfaceEC2InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Roles": [ { "Ref": "ResurfaceECSRole" } ]
      }
    },
    "ResurfaceEC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "IamInstanceProfile" : { "Ref": "ResurfaceEC2InstanceProfile" },
        "ImageId": "ami-04e6179c63d17513d",
        "InstanceType" : "t3.2xlarge",
        "KeyName": { "Ref": "ResurfaceEC2KeyPair" },
        "NetworkInterfaces": [{
            "DeviceIndex": "0",
            "NetworkInterfaceId": { "Ref": "ResurfaceENI" }
        }],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [ "",
              [
                "#!/bin/bash -xe\n",
                "echo ECS_CLUSTER=",
                { "Ref": "ResurfaceCluster" },
                " >> /etc/ecs/ecs.config\n",
                "\n",
                "sudo su root -c \"ip link add vx0 type vxlan id ",
                { "Ref": "MirrorSessionVNI" },
                " local ",
                { "Fn::GetAtt": [ "ResurfaceENI", "PrimaryPrivateIpAddress" ] },
                " remote ",
                { "Ref": "MirrorSourceIP" },
                " dev eth0 dstport 4789\"\n",
                "sudo su root -c \"ip link set vx0 up\"\n",
                "\n"
              ]
            ]
          }
        }
      }
    },
    "ResurfaceEntitlementSecret": {
      "Type": "AWS::SecretsManager::Secret",
      "Properties": {
        "Name": "resurface/token",
        "Description": "Resurface entitlement token. Used to pull images from the Resurface Docker registry.",
        "SecretString": {
          "Fn::Join": [ "", [
            "{\"username\":\"resurfacelabs/release\",\"password\":\"",
            { "Ref": "ResurfaceEntitlementToken" },
            "\"}"
          ]]
        }
      }
    },
    "ResurfaceCluster": {
      "Type": "AWS::ECS::Cluster",
      "Properties": {
        "ClusterName": "ResurfaceCluster"
      }
    },
    "ResurfaceTaskDefinition": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "ContainerDefinitions": [
          {
            "Name": "Resurface",
            "Image": "docker.resurface.io/release/resurface:3.0.21",
            "RepositoryCredentials": {
              "CredentialsParameter": { "Ref": "ResurfaceEntitlementSecret" }
            },
            "PortMappings": [
              {
                "ContainerPort": 7700,
                "HostPort": 7700
              },
              {
                "ContainerPort": 7701,
                "HostPort": 7701
              }
            ]
          },
          {
            "Name": "NetworkSniffer",
            "Image": "docker.resurface.io/release/network-sniffer:1.0.0",
            "RepositoryCredentials": {
              "CredentialsParameter": { "Ref": "ResurfaceEntitlementSecret" }
            },
            "Environment": [
              {
                "Name": "USAGE_LOGGERS_URL",
                "Value": "http://localhost:7701/message"
              },
              {
                "Name": "USAGE_LOGGERS_RULES",
                "Value": { "Ref": "ResurfaceRules" }
              },
              {
                "Name": "USAGE_LOGGERS_DISABLED",
                "Value": "false"
              },
              {
                "Name": "APP_PORT",
                "Value": { "Ref": "MirrorSourcePort" }
              },
              {
                "Name": "VPC_MIRROR_DEVICE",
                "Value": "vx0"
              }
            ]
          }
        ],
        "ExecutionRoleArn": { "Fn::GetAtt":  [ "ResurfaceECSRole", "Arn" ] },
        "RequiresCompatibilities": [ "EC2" ],
        "NetworkMode": "host",
        "Cpu": 5120,
        "Memory": 10240
      }
    },
    "ResurfaceService": {
      "Type": "AWS::ECS::Service",
      "DependsOn": "ResurfaceEC2Instance",
      "Properties": {
        "ServiceName": "ResurfaceService",
        "LaunchType": "EC2",
        "Cluster": { "Ref": "ResurfaceCluster" },
        "TaskDefinition": { "Ref": "ResurfaceTaskDefinition" },
        "DesiredCount": 1
      }
    }
  },
  "Outputs": {
    "ResurfaceAPIExplorer": {
      "Value": { "Fn::Join": [ ":", [ { "Fn::GetAtt": [ "ResurfaceEC2Instance", "PublicDnsName" ] }, "7700" ] ] }
    }
  }
}
